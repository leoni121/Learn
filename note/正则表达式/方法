replace
    "<color color_tag='#112233+++#112233'>" ====> "<color color_tag='{{#112233}}+++{{#112233}}'>"
    str.replace(/(#.{6})/g,function(){
        return "{{"+arguments[1]+"}}";
    })

exec
    /^{{(.*)}}$/.exec("{{nzq}}") => ["{{nzq}}", "nzq", index: 0, input: "{{nzq}}", groups: undefined]
    /^{{.*}}$/.exec("{{nzq}}")   => ["{{nzq}}", index: 0, input: "{{nzq}}", groups: undefined]